# AI Worker Configuration
# このファイルを .env にコピーして使用

# ========================================
# Model Settings
# ========================================
EMBEDDING_MODEL=intfloat/multilingual-e5-large
EMBEDDING_DIM=1024
MAX_BATCH_SIZE=32

# ========================================
# Server Settings  
# ========================================
SERVER_HOST=0.0.0.0
SERVER_PORT=8001
RELOAD=false

# ========================================
# Performance Tuning
# ========================================
NUM_WORKERS=1
TIMEOUT_KEEP_ALIVE=5

# ========================================
# Logging
# ========================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ========================================
# Cache (Optional)
# ========================================
MODEL_CACHE_DIR=./models_cache